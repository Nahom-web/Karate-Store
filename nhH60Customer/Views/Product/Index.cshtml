@model IEnumerable<nhH60Customer.Dtos.ProductDTO>


<main>

    <h1 class="text-center">Products</h1>

    <div>

        <form method="post">
            <div class="input-group mb-3 search">
                <input class="form-control col-xs-3" id="ProductName" name="ProductName" placeholder="Type a product title" size="20"
                       type="text" />
                <button type="submit" id="searchProduct" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Search for a Product">Search</button>
            </div>
        </form>

    </div>

    <div class="container-products">
        @foreach (var product in Model) {
            @await Html.PartialAsync("_Products", product)
        }
    </div>


</main>