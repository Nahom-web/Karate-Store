@model nhH60Store.Models.Product

<main>
    <h2 id="updateProductTitle">Update @Model.Description</h2>

    <a title="Go Back" class="btn btn-secondary" href="@Url.Action("Index", "Product")">Go Back</a>


    @await Html.PartialAsync("_MessageDisplays")

    <p>To update, enter the new stock number.</p>


    @using (Html.BeginForm()) {

        @Html.LabelFor(x => x.ProductId, new { @class = "d-none" })
        @Html.EditorFor(x => x.ProductId, new { htmlAttributes = new { @class = "d-none" } })

        <div class="Forms">

            @Html.LabelFor(x => x.Stock)
            @Html.EditorFor(x => x.Stock)

            <input type="submit" value="Update Stock" class="submitBtn btn btn-success" />

        </div>

    }
</main>