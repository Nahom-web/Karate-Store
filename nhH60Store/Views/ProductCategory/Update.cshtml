@model nhH60Store.Models.ProductCategory

<main>
    <h2 id="updateProductTitle">Update @Model.ProdCat</h2>

    <a title="Go Back" class="btn btn-secondary" href="@Url.Action("Index", "ProductCategory")">Go Back</a>


    @using (Html.BeginForm()) {

        @Html.LabelFor(x => x.CategoryId, new { @class = "d-none" })
        @Html.EditorFor(x => x.CategoryId, new { htmlAttributes = new { @class = "d-none" } })

        <div class="Forms CategoryForm">

            @Html.LabelFor(x => x.ProdCat)
            @Html.EditorFor(x => x.ProdCat)

            <input type="submit" value="Update Category" class="submitBtn btn btn-success" />

        </div>

    }
</main>